<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<fx:root  type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tech.subluminal.client.presentation.controller.MenuController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="menuContainer">
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0">
        <ImageView fx:id="logoDock" fitHeight="301.0" fitWidth="703.0" pickOnBounds="true"
                   preserveRatio="true">

        </ImageView>
        <HBox fx:id="menuButtonsDock" alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
              spacing="20.0">
            <children>
                <Button onAction="#joinPressed" alignment="CENTER" mnemonicParsing="false" prefHeight="100.0"
                        prefWidth="134.0" text="Join" textAlignment="CENTER">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Button>
                <Button onAction="#hostPressed" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="102.0"
                        prefWidth="138.0" text="Host" textAlignment="CENTER">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Button>
                <Button onAction="#settingPressed" mnemonicParsing="false" prefHeight="101.0" prefWidth="152.0"
                        text="Settings" textAlignment="CENTER">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </VBox>

</fx:root>
