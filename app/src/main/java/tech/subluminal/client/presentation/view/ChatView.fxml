               </GridPane.margin>
            </Button>
            <CheckBox fx:id="isGlobalShown" mnemonicParsing="false" onAction="#updateFilter" selected="true" text="Show Global Chat" />
         </children>
      </GridPane>
      <GridPane GridPane.rowIndex="1">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="212.0" minWidth="10.0" prefWidth="19.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="415.0" minWidth="10.0" prefWidth="415.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
                <TextField fx:id="messageText" onAction="#sendMessage" prefHeight="25.0" prefWidth="368.0" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </TextField>
            <Label text="&gt;">
               <padding>
                  <Insets left="5.0" />
               </padding></Label>
         </children>
      </GridPane>
   </children>
