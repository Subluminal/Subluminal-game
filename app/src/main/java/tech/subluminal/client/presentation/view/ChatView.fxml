      <RowConstraints maxHeight="48.0" minHeight="10.0" prefHeight="45.0" vgrow="NEVER" />
   </rowConstraints>
   <children>
      <ScrollPane fx:id="chatHistoryWrapper" hbarPolicy="NEVER" hvalue="1.0" prefHeight="200.0" prefWidth="462.0" vvalue="1.0">
         <content>
            <VBox fx:id="chatHistory" prefHeight="191.0" style="-fx-background-color: black;" styleClass="console" />
         </content>
      </ScrollPane>
      <GridPane prefHeight="74.0" prefWidth="434.0" GridPane.rowIndex="2">
