<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8"
          fx:controller="tech.subluminal.client.presentation.controller.ChatController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="434.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="212.0" minHeight="10.0" prefHeight="211.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="48.0" minHeight="10.0" prefHeight="46.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="48.0" minHeight="10.0" prefHeight="33.0" vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <GridPane GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="328.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" percentWidth="20.0"
                                   prefWidth="54.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#sendMessage" prefHeight="25.0"
                        prefWidth="87.0" text="Send" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Button>
                <CheckBox fx:id="isGlobalShown" mnemonicParsing="false" onAction="#updateFilter" selected="true"
                          text="Show Global Chat"/>
            </children>
        </GridPane>
        <GridPane style="-fx-background-color: black;" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="212.0" minWidth="10.0" prefWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="415.0" minWidth="10.0" prefWidth="380.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField fx:id="messageText" onAction="#sendMessage" prefHeight="25.0" prefWidth="375.0"
                           GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </TextField>
                <Label style="-fx-background-color: transparent;" styleClass="font-dos" text="&gt;">
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
            </children>
        </GridPane>
        <ListView fx:id="chatHistory" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: black;"/>
    </children>
</GridPane>
