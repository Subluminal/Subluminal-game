<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
  type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8"
  fx:controller="tech.subluminal.client.presentation.controller.LobbyListController">
  <children>
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
      AnchorPane.topAnchor="0.0" alignment="CENTER"
      layoutX="208.0" layoutY="-11.0" prefHeight="400.0"
      prefWidth="600.0">
      <children>
        <ListView style="-fx-background-color: grey;" prefHeight="401.0" prefWidth="600.0"
          fx:id="lobbyList"/>
        <ToolBar style="-fx-background-color: transparent;" nodeOrientation="RIGHT_TO_LEFT"
          prefHeight="40.0"
          prefWidth="200.0">
          <items>
            <Button mnemonicParsing="false" onAction="#onLobbyRefresh" text="Refresh Lobbies"/>
            <Button mnemonicParsing="false" onAction="#onLobbyCreate" text="Create Lobby"/>
          </items>
        </ToolBar>

      </children>
    </VBox>
  </children>
</fx:root>
